mixin formTemplate(action, method, fields)
  h1.mt-10.text-center.text-2xl.leading-9.font-bold.tracking-tight.text-sky-500= title
  h2= subtitle
  form(action=action, method=method, class="bg-sky-100 p-6 rounded-lg shadow-md w-full max-w-md mx-auto")
    each field in fields
      .form-group.mb-4
        if field.label
          label.block.text-sky-900.font-medium.text-sm.mb-2(for=field.name)= field.label
        if field.type === 'textarea'
          textarea(name=field.name, placeholder=field.placeholder, required=field.required, 
            class="w-full p-3 border border-sky-400 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-300")
        else
          input(type=field.type, name=field.name, placeholder=field.placeholder, required=field.required, 
            class="w-full p-3 border border-sky-400 rounded-md focus:outline-none focus:ring-2 focus:ring-sky-300")
    button(type="submit", class="w-full bg-sky-500 hover:bg-sky-600 text-white font-bold py-2 px-4 rounded-md transition-colors")
      | Submit

