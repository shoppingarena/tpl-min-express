mixin navLink(href, icon, text)
    li
        a(href=href class='flex flex-wrap items-center justify-center gap-1') #[span(class="material-symbols-outlined")= icon]#{text}

nav
    ul(class='flex flex-row justify-evenly cursor-pointer sm:text-base md:text-lg lg:text-2xl')
        +navLink('/home','home','Home')
        +navLink('/about', 'info', 'About')
        +navLink('/portfolio', 'business_center', 'Portfolio')
        +navLink('/contact', 'contact_page', 'Contact')
        +navLink('/login', 'login', 'Login')
        +navLink('/register', 'app_registration', 'Signup')
        